{
  BitmapFont: {
    default: { file: ../../fonts/bit-16.fnt }
  },
  Color: {
    white: { r: 1, g: 1, b: 1, a: 1 },
    gray: { r: 0.5, g: 0.5, b: 0.5, a: 1 },
    darkGray: { a: 1.0, b: 0.25, g: 0.25, r: 0.25 },
    middleGray: { a: 1.0, b: 0.33, g: 0.33, r: 0.33 },

    up: { r: 0.6, g: 0.6, b: 0.6, a: 1 },
    over: { r: 0.5, g: 0.5, b: 0.5, a: 1 },
    down: { a: 1.0, b: 0.84705883, g: 0.9843137, r: 1.0 },
    checked: { r: 0, g: 0.3, b: 0.5, a: 1 },
    checkedOver: { r: 0, g: 0.4, b: 0.6, a: 1 },
    disabled: { r: 0.1, g: 0.1, b: 0.1, a: 1 },
    fontColor: {r: 1, g: 1, b: 1, a: 0.9},
    background: { r: 0.8, g: 0.8, b: 0.8, a: 1 },

    font: fontColor,
    fontOver: down,
    fontDown: gray,
    fontChecked: checked,
    fontCheckedOver: checkedOver,
    fontDisabled: gray
  },
  TintedDrawable: {
    buttonUp: { name: base, color: up },
    buttonOver: { name: base, color: over },
    buttonDown: { name: base-press, color: down },
    buttonDisabled: { name: base, color: disabled },
    buttonChecked: { name: base, color: checked },
    buttonCheckedOver: { name: base, color: checkedOver },

    cross: { name: x, color: font },

    scrollHorizontal: { name: scroll, color: up },
    scrollVertical: { name: scroll-v, color: up },
    scrollPane: { name: outline-press, color: background },

    labelBackground: { name: outline-press, color: middleGray },
    pricePaneBackground: { name: outline-press, color: darkGray }
  },
  ButtonStyle: {
    default: { up: buttonChecked, over: buttonCheckedOver, down: buttonOver, disabled: buttonChecked },
    shopItemButton: { up: buttonUp, over: buttonOver, down: buttonDown, disabled: buttonDisabled }
  },
  LabelStyle: {
    default: { font: default, fontColor: font },
    background: { font: default, fontColor: font, background: labelBackground },
    price: { font: default, fontColor: font, background: pricePaneBackground }
  },
  TextButtonStyle: {
    backButton: { up: buttonChecked, over: buttonCheckedOver, down: buttonChecked, disabled: buttonDisabled, font: default, fontColor: font,
      overFontColor: fontOver, downFontColor: fontDown, disabledFontColor: fontDisabled, pressedOffsetY: -1, pressedOffsetX: 1 }
  },
  ScrollPaneStyle: {
    default: { hScrollKnob: scrollHorizontal, vScrollKnob: scrollVertical },
    background: { background: scrollPane, hScrollKnob: scrollHorizontal, vScrollKnob: scrollVertical }
  }
